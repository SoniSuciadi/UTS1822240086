<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="@drawable/button_nav"
        android:layout_marginLeft="20dp"
        android:onClick="onClickBackDaftar"
        android:layout_marginTop="10dp"
        android:text="DAFTAR"
        android:textSize="20dp"
        android:stateListAnimator="@null"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASUKAN DATA DIRI"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
       />
    <EditText
        android:id="@+id/npm"
        android:inputType="number"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_box"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp"
        android:padding="13dp"
        android:layout_marginTop="30dp"
        android:hint="NPM"
        android:layout_below="@+id/info"/>
    <EditText
        android:id="@+id/nama"
        android:inputType="text"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_box"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp"
        android:padding="13dp"
        android:layout_marginTop="30dp"
        android:hint="NAMA LENGKAP"
        android:layout_below="@+id/npm"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ttl"
            android:inputType="date"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_box"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="30dp"
            android:padding="13dp"
            android:layout_marginTop="30dp"
            android:hint="Tanggal Lahir"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"

            android:layout_marginTop="30dp"/>


    </RelativeLayout>
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_box"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp"
        android:padding="13dp"
        android:layout_marginTop="30dp"
        android:hint="EMAIL"
        android:layout_below="@+id/ttl"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/kdnegara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp" />
        <EditText
            android:id="@+id/tlp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_box"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="30dp"
            android:padding="13dp"
            android:layout_marginTop="30dp"
            android:hint="No. Handphone"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textSize="8pt"
        android:onClick="onClickSimpan"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tlp"
        />
</LinearLayout>